<div class="section" id="slack-menu">
    <div class="container">

        <!-- ROW 1 / COL 1 - HEADER -->
        <div class="row">
            <div class="col s12 m12 l12 center-align">
                <h2 class="header title-hdr">-- Galarneau's Slack Channel Poster --</h2>
                <h5 id="subtitle-hdr">"Yet another way to try and get Mike's attention "</h5>
            </div>
        </div>

        <!-- ROW 2 / COL 1 - Form Entry Card w/Image -->
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card horizontal z-depth-2">
                    <div class="card-image">
                        <img class="responsive-img" src="assets/images/slack_comment.png">
                    </div>
                    <div class="card-content valign-wrapper center-align">
                        <form class="slackmsgform">
                            <h5>Leave a message for Mike:</h5>
                            <input type="text" name="message" placeholder="your message here" size="50">
                            <input id="add-btn" type="submit" class="btn waves-effect waves-light" value="Post Message">
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- ROW 3 / COL 1 - Slack Messages Card with image -->
            <div class="col s12 m12 l6 offset-l3">
                <div class="card slackmsg-lst z-depth-2">
                    <div class="card-image">
                    <img src="assets/images/slack_logo.png">
                    </div>
                    <h4 class="header text_b center-align">Messages you've posted</h4>
                    <table class="striped">
                        {{#each messages}}
                        <tr>
                            <td>
                                <p>{{this.slack_message}}</p>
                            </td>
                            <td><button class="repost-btn btn waves-effect waves-light" data-id={{this.id}}>Repost</button></td>
                            <td><button class="delete-btn btn waves-effect waves-light" data-id={{this.id}}><i class="fas fa-trash-alt"></i></button></td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>